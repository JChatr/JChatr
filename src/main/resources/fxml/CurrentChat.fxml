<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Chatr.View.CurrentChatController">
    <children>
        <SplitPane dividerPositions="0.33" focusTraversable="true" prefHeight="700.0" prefWidth="781.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <AnchorPane>
                            <children>
                                <Label text="\@dTrump">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </Label>
                                <Button mnemonicParsing="false" text="New Chat" AnchorPane.rightAnchor="0.0" />
                            </children>
                        </AnchorPane>
                        <ToolBar prefHeight="40.0" prefWidth="200.0">
                            <items>
                                <TextField prefWidth="200.0" promptText="Search or start a new chat">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </TextField>
                                <Button mnemonicParsing="false" text="Search" />
                            </items>
                        </ToolBar>
                        <ListView prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <AnchorPane>
                            <children>
                                <VBox spacing="5.0" AnchorPane.leftAnchor="0.0">
                                    <children>
                                        <Label fx:id="currentChatName" text="Current Chat">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="currentChatUsers" text="user1, user2, user3...">
                                            <font>
                                                <Font size="11.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <Button mnemonicParsing="false" text="Chat Info" AnchorPane.rightAnchor="0.0" />
                            </children>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </AnchorPane>
                        <ListView fx:id="currentChat" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </ListView>
                        <HBox>
                            <children>
                                <Button minWidth="75.0" mnemonicParsing="false" text="Emoticons">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Button>
                                <TextArea fx:id="textInput" maxHeight="150.0" minWidth="20.0" prefHeight="50.0" promptText="Write a Message..." wrapText="true" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </TextArea>
                                <Button fx:id="sendButton" minWidth="75.0" mnemonicParsing="false" onAction="#onSendButtonClick" text="Send">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
    <stylesheets>
        <URL value="@../styles/CurrentChat.css" />
    </stylesheets>
</AnchorPane>
