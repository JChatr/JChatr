                        </TextField>
                  <JFXRippler maskType="CIRCLE">
                     <control>
                             <ImageView id="newChatImageButton" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" styleClass="img-button">
