<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Chatr.View.ChatList.ChatListController">
    <children>
        <VBox maxWidth="300.0" minHeight="300.0" minWidth="300.0" prefWidth="300.0" HBox.hgrow="SOMETIMES">
            <children>
            <HBox alignment="CENTER">
               <children>
                        <Label fx:id="userName" text="\@dTrump">
                            <padding>
                                <Insets bottom="10.0" top="10.0" />
                            </padding>
                        </Label>
                  <Pane HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="newChat" text="newChat" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
                <HBox>
                    <children>
                        <TextField fx:id="searchBox" prefWidth="200.0" promptText="Search" styleClass="last" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="11.0" />
                            </font>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </HBox>
                <ListView fx:id="chatsList" prefHeight="200.0" prefWidth="200.0" styleClass="chat-selector" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
        <AnchorPane fx:id="currentChatAnchor" HBox.hgrow="ALWAYS" />
    </children>
    <stylesheets>
        <URL value="@../css/CurrentChat.css" />
    </stylesheets>
</HBox>
