                                      <Insets bottom="12.5" left="10.0" right="10.0" />
                                  </HBox.margin>
                              </ImageView>
                     </control>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </JFXRippler>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <ListView id="chatListView" fx:id="chatsList" prefHeight="200.0" prefWidth="200.0" styleClass="chat-selector" VBox.vgrow="ALWAYS" />
