<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox stylesheets="@CurrentChat.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Chatr.View.CurrentChat.CurrentChatController">
    <children>
        <AnchorPane>
            <children>
                <VBox spacing="5.0" AnchorPane.leftAnchor="0.0">
                    <children>
                        <Label fx:id="currentChatName" text="Current Chat">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <Label fx:id="currentChatUsers" text="user1, user2, user3...">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <Button mnemonicParsing="false" styleClass="btn" text="Chat Info" AnchorPane.rightAnchor="0.0" />
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </AnchorPane>
        <ListView id="currentChat" fx:id="currentMessages" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </ListView>
        <HBox prefHeight="50.0">
            <children>
                <Button fx:id="emoticonButton" contentDisplay="GRAPHIC_ONLY" minHeight="30.0" minWidth="75.0" mnemonicParsing="false" prefWidth="30.0" styleClass="btn">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <font>
                        <Font size="11.0" />
                    </font>
                </Button>
                <TextArea fx:id="textInput" focusTraversable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Write a Message..." style="-fx-focus-color: -fx-control-inner-background; -fx-faint-focus-color: -fx-control-inner-background;" wrapText="true" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </HBox.margin>
                    <font>
                        <Font size="11.0" />
                    </font>
                </TextArea>
                <Button id="sendButton" fx:id="sendButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="75.0" mnemonicParsing="false" onAction="#onSendButtonClick" styleClass="primary" text="Send">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <font>
                        <Font size="11.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
